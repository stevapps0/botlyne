# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Configuration
GOOGLE_API_KEY=your_google_ai_api_key_here

# Scraping Service Configuration
SCRAPING_SERVICE_URL=http://localhost:3001
SCRAPING_API_KEY=your_scraping_api_key_here

# Email Configuration (for human handoff)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SUPPORT_EMAIL=support@yourcompany.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Evolution API Configuration (for WhatsApp integration)
EVOLUTION_API_BASE_URL=https://evolution-api.sliplane.app
EVOLUTION_API_GLOBAL_KEY=your_evolution_api_key_here

# Redis & Security (Production)
REDIS_URL=redis://localhost:6379
WEBHOOK_SIGNATURE_SECRET=your_webhook_secret
ALLOWED_WEBHOOK_IPS=192.168.1.0/24,10.0.0.1

# Rate Limiting & Circuit Breaker
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
